<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book List</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body class="container mt-4">

    <h2 class="mb-4">All Books</h2>

    <!-- Search form -->
    <form action="/books" method="GET" class="mb-4 d-flex gap-2">
        <input type="text" name="search" placeholder="Search by Title" class="form-control" />
        <button type="submit" class="btn btn-secondary">Search</button>
    </form>

    <!-- Add new book button -->
    <a href="/books/new" class="btn btn-primary mb-3">Add New Book</a>

    <!-- Book table -->
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Published Year</th>
            </tr>
        </thead>
        <tbody>
            <% if (null) { %>
                <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td><%= book.genre %></td>
                        <td><%= book.publishedYear %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">No books found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

</body>
</html>
